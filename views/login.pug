doctype html
html(lang='en')
  head
    title CLMS Report Login
    meta(name='viewport', content='width=device-width, initial-scale=0')
    link(rel='stylesheet', href='bootstrap/dist/css/bootstrap.css')
  body
    block content
      .container
      
        nav.navbar.navbar-default
            div.container-fluid
              div.navbar-header
                a.navbar-brand(href='/')
                  span.glyphicon.glyphicon-flash(aria-hidden='true')
                span.navbar-brand CLMS Report Wizard
                
        div(style="width: 400px; text-align: center; margin: auto; margin-top: 200px;")
          form.form-signin(action="/login", method="post")
            h2.form-signin-heading Please sign in
            div(class=ErrorMessageClass, role="alert").alert.alert-danger Login Failed
            div.input-group.input-group-lg
              span#sizing-addon1.input-group-addon.glyphicon.glyphicon-user
              input.input-block-level.form-control(type="text", name="username", placeholder="CLMS Username",  required="", autofocus="", aria-describedby="sizing-addon1")
            div.input-group.input-group-lg
              span#sizing-addon2.input-group-addon.glyphicon.glyphicon-lock
              input.input-block-level.form-control(type="password", name="password", placeholder="Password", required="", aria-describedby="sizing-addon2")
            button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in

    script(src='angular/angular.js')
    script(src='jquery/dist/jquery.js')
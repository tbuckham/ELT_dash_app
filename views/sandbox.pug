doctype html
html(ng-app='app')
  head
    title CLMS Report Classes
    meta(name='viewport', content='width=device-width, initial-scale=0')
    link(rel='stylesheet', href='bootstrap/dist/css/bootstrap.css')
    angular-chart.css
  body
    block content
      .container
      
        nav.navbar.navbar-default
            div.container-fluid
              div.navbar-header
                a.navbar-brand(href='/')
                  span.glyphicon.glyphicon-flash(aria-hidden='true')
                span.navbar-brand CLMS Report Wizard
              p.navbar-text.navbar-right
                a.navbar-link(href='/logout', style="margin-right:15px") Log Out  
                
        div.container
         div.panel-default.panel-primary.col-xs-12.col-md-6
          div.panel-heading 
           h3.panel-title Some title
          div.panel-body(ng-controller='chart1')  
           canvas#bar.chart.chart-bar.chart-xs(chart-data='data', chart-labels='labels', chart-series='series', chart-options='options', height='{{height_chart}}')
         div.panel-default.panel-info.col-xs-12.col-md-6
          div.panel-heading 
           h3.panel-title Some other title
          div.panel-body(ng-controller='chart2') 
           canvas#base.chart-horizontal-bar(chart-data='data', chart-labels='labels', chart-series='series', chart-options='options') 
           //canvas#base.chart-horizontal-bar(chart-data='data', chart-labels='labels', chart-options='options')
               
            
        
            
    script(src='angular/angular.js')
    script(src='angular-animate/angular-animate.js')
    script(src='jquery/dist/jquery.js')
    script(src='js/sandbox.js')
    script(src='chart.js/dist/Chart.min.js')
    script(src='angular-chart.js/dist/angular-chart.min.js')
    script(type='text/javascript').
      var ChartObject =!{JSON.stringify(ChartObject)}
    
      
